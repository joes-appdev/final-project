<h1>
  Meeting list
</h1>

<a href="/new_meeting_form">
  Add a new meeting
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Connections
    </th>

    <th>
      Date
    </th>

    <th>
      Meeting notes
    </th>

    <th>
      Location
    </th>

    <th>
      User
    </th>

    <th>
      Meeting type
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @meetings.each do |meeting| %>
  <tr>
    <td>
      <%= meeting.id %>
    </td>

    <td>
      <%= meeting.connections_id %>
    </td>

    <td>
      <%= meeting.date %>
    </td>

    <td>
      <%= meeting.meeting_notes %>
    </td>

    <td>
      <%= meeting.location_id %>
    </td>

    <td>
      <%= meeting.user_id %>
    </td>

    <td>
      <%= meeting.meeting_type %>
    </td>

    <td>
      <%= time_ago_in_words(meeting.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(meeting.updated_at) %> ago
    </td>

    <td>
      <a href="/meetings/<%= meeting.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
