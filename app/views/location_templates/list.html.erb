<h1>
  Location list
</h1>

<a href="/new_location_form">
  Add a new location
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Address
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @locations.each do |location| %>
  <tr>
    <td>
      <%= location.id %>
    </td>

    <td>
      <%= location.address %>
    </td>

    <td>
      <%= time_ago_in_words(location.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(location.updated_at) %> ago
    </td>

    <td>
      <a href="/locations/<%= location.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
