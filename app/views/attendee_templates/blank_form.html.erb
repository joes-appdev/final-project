<h1>
  Add a new attendee
</h1>

<hr>

<%= render("attendee_templates/validation_failures.html.erb") %>

<form action="/insert_attendee_record" method="post">
  <div>
    <label for="meeting_id">
      Meeting
    </label>

    <input type="text" id="meeting_id" name="meeting_id" value="<%= @attendee.meeting_id %>">
  </div>

  <div>
    <label for="connection_id">
      Connection
    </label>

    <input type="text" id="connection_id" name="connection_id" value="<%= @attendee.connection_id %>">
  </div>

  <button>
    Create attendee
  </button>
</form>

<hr>

<a href="/attendees">
  Go back
</a>
