<h1>
  Attendee list
</h1>

<a href="/new_attendee_form">
  Add a new attendee
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Meeting
    </th>

    <th>
      Connection
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @attendees.each do |attendee| %>
  <tr>
    <td>
      <%= attendee.id %>
    </td>

    <td>
      <%= attendee.meeting_id %>
    </td>

    <td>
      <%= attendee.connection_id %>
    </td>

    <td>
      <%= time_ago_in_words(attendee.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(attendee.updated_at) %> ago
    </td>

    <td>
      <a href="/attendees/<%= attendee.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
