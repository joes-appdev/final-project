<h1>
  Company list
</h1>

<a href="/new_company_form">
  Add a new company
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Company
    </th>

    <th>
      Location
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @companies.each do |company| %>
  <tr>
    <td>
      <%= company.id %>
    </td>

    <td>
      <%= company.company %>
    </td>

    <td>
      <%= company.location %>
    </td>

    <td>
      <%= time_ago_in_words(company.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(company.updated_at) %> ago
    </td>

    <td>
      <a href="/companies/<%= company.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
