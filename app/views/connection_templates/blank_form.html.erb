<h1>
  Add a new connection
</h1>

<hr>

<%= render("connection_templates/validation_failures.html.erb") %>

<form action="/insert_connection_record" method="post">

  
  <div>

      <label for="company_id">Company</label>
      <select id="company_id" name="company_id" >
        <% Company.all.order({ :id => :asc }).each do |a_user| %>
          <option value="<%= a_user.id %>">
            <%= a_user.company %>
          </option>
        <% end %>
      </select>
  </div>

    <div>

      <label for="location_id">Location</label>
      <select id="location_id" name="location_id" >
        <% Location.all.order({ :id => :asc }).each do |a_user| %>
          <option value="<%= a_user.id %>">
            <%= a_user.address %>
          </option>
        <% end %>
      </select>
  </div>
  
  <div>
    <label for="photo">
      Photo
    </label>

    <input type="text" id="photo" name="photo" value="<%= @connection.photo %>">
  </div>

  <div>
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" value="<%= @connection.name %>">
  </div>

  <div>
    <label for="linkein">
      Linkedin
    </label>

    <input type="text" id="linkein" name="linkein" value="<%= @connection.linkein %>">
  </div>

  <button>
    Create connection
  </button>
</form>

<hr>

<a href="/connections">
  Go back
</a>
