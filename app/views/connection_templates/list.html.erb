<h1>
  Connection list
</h1>

<a href="/new_connection_form">
  Add a new connection
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Company
    </th>

    <th>
      Location
    </th>

    <th>
      Photo
    </th>

    <th>
      Name
    </th>

    <th>
      Linkein
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @connections.each do |connection| %>
  <tr>
    <td>
      <%= connection.id %>
    </td>

    <td>
      <%= connection.company_id %>
    </td>

    <td>
      <%= connection.location_id %>
    </td>

    <td>
      <%= connection.photo %>
    </td>

    <td>
      <%= connection.name %>
    </td>

    <td>
      <%= connection.linkein %>
    </td>

    <td>
      <%= time_ago_in_words(connection.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(connection.updated_at) %> ago
    </td>

    <td>
      <a href="/connections/<%= connection.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
