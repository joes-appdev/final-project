<h1>
  Connection list
</h1>

<a href="/new_connection_form">
  Add a new connection
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Company
    </th>

    <th>
      Location
    </th>

    <th>
      Photo
    </th>

    <th>
      Name
    </th>

    <th>
      Linkein
    </th>


    <th>
    </th>
  </tr>

  <% @connections.each do |connection| %>
  <tr>
    <td>
      <%= connection.id %>
    </td>

    <td>
      <%= connection.company_id %>
    </td>

    <td>
      <%= connection.location_id %>
    </td>

    <td>
   <img src= <%= connection.photo %> >
   </td>

    <td>
      <%= connection.name %>
    </td>

    <td>
      <a href="<%= connection.linkein %>">
          Linkedin
        </a>
    </td>



    <td>
      <a href="/connections/<%= connection.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
